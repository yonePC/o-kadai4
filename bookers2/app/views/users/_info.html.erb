<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count,followings_user_path(user) %></th>
  </tr>
  <tr>  
    <th>followers</th>
    <th><%= link_to user.followers.count,followers_user_path(user) %></th>
  </tr>
  
  
  
</table>

<div class='row'>
  <% if current_user == user %>
    <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
  <% end %>
</div>

<div>
 <% if current_user != user %>
             <% if current_user.following?(user) %>
              <%= button_to 'フォロー外す', relationship_path(current_user.relationships.find_by(follower: user)), method: :delete, class: 'btn btn-success' %>
              <% else %>
              <%= button_to 'フォローする', relationships_path(follower: user), class: 'btn btn-success' %>
             <% end %>
           <% end %>
</div>           